<section id="carrito">
<div class="card">
<h2>Carrito</h2>
<div id="cart"></div>
<p>Total: $<span id="total">0</span></p>
</div>
</section>

<script>
let cart=[];
let total=0;

function addToCart(name,price){
 cart.push({name,price});
 total+=price;
 render();
}

function render(){
 let c=document.getElementById("cart");
 c.innerHTML="";
 cart.forEach(i=>{
  c.innerHTML+=`<p>${i.name} - $${i.price}</p>`;
 });
 document.getElementById("total").innerText=total;
}
</script>

